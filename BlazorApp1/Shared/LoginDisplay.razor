<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted">👋 Hello, <a href="Identity/Account/Manage" class="text-decoration-none fw-semibold">@context.User.Identity?.Name</a></span>
            <form method="post" action="Identity/Account/LogOut" class="mb-0">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Log out</button>
            </form>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="d-flex align-items-center gap-3">
            <a href="Identity/Account/Register" class="btn btn-outline-primary btn-sm">Register</a>
            <a href="Identity/Account/Login" class="btn btn-primary btn-sm">Log in</a>
        </div>
    </NotAuthorized>
</AuthorizeView>