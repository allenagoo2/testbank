<AuthorizeView>
    <Authorized>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark shadow-sm px-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">🏦 Offset Account</a>
                <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <div class="@NavMenuCssClass bg-light border-end" style="min-height: 100vh;">
            <nav class="nav flex-column py-3">
                <NavLink class="nav-link px-4 text-dark" href="/" Match="NavLinkMatch.All">
                    <span class="oi oi-list-rich me-2" aria-hidden="true"></span> Accounts
                </NavLink>
                <NavLink class="nav-link px-4 text-dark" href="addaccounts">
                    <span class="oi oi-plus me-2" aria-hidden="true"></span> Add Account
                </NavLink>
                <NavLink class="nav-link px-4 text-dark" href="deposit">
                    <span class="oi oi-arrow-thick-bottom me-2" aria-hidden="true"></span> Deposit
                </NavLink>
                <NavLink class="nav-link px-4 text-dark" href="withdraw">
                    <span class="oi oi-arrow-thick-top me-2" aria-hidden="true"></span> Withdraw
                </NavLink>
            </nav>
        </div>
    </Authorized>
</AuthorizeView>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
